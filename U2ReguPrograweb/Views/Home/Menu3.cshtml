
@{
    Layout = "View";
}

<section class="menu3">

    <div>
        <h1>NUESTRO MENÚ</h1>
        @foreach (var h in Model.Menus)
        {
            @if (h.Id == Model.Id)
            {
              <h2 class="seleccionado"><a href="~/Home/Menu3/@h.Id"><span>@h.Nombre</span> <span class="price">$@h.Precio</span></a></h2>
            }
            else
            {
              <h2><a href="~/Home/Menu3/@h.Id"><span>@h.Nombre</span> <span class="price">$@h.Precio</span></a></h2>
            }
        }
    </div>
    <div>
        <img src="~/images/@(Model.Id).png" />
        <p>@Model.Descripción</p>
    </div>

</section>

